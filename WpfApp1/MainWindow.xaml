<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <StackPanel Orientation="Vertical">
        <Label
            Content="ADO technology"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="DemiBold">
        </Label>
        <Button
            Content="Introducion"
            FontSize="20"
            FontWeight="DemiBold"
            Margin="20 10 20 10"
            Padding="5"
            x:Name="IntroButton"
            Click="IntroButton_Click">
        </Button>
        <Button
            Content="Sign up/Login in"
            FontSize="20"
            FontWeight="DemiBold"
            Margin="20 10 20 10"
            Padding="5"
            x:Name="AUSBytton"
            Click="AUSBytton_Click">
        </Button>
        <Button
          Content="CRUD"
          FontSize="20"
          FontWeight="DemiBold"
          Margin="20 10 20 10"
          Padding="5"
          x:Name="CrudBytton"
          Click="CrudBytton_Click">
        </Button>
    </StackPanel>
</Window>
